{{>layout/header}}

<div class="chatBoxTheme" id="chatBoxTheme" style="width: 320px; height: 480px;">

    <div id="chatting" class="chatting"></div>

    <input type="hidden" id="sessionId" name="sessionId" value="{{userInfo.id}}">
    <input type="hidden" id="roomId" name="roomId" value="{{roomId}}">
    <input type="hidden" id="userName" name="userName" value="{{userInfo.id}}">

    <div class="sendForm">
        <input type="hidden" value="{{userInfo.id}}" id="sender" name="sender">
        <textarea id="message" class="sendMessage" placeholder="메시지를 입력하세요."></textarea>
        <div class="button" onclick="send()"><p>전송</p></div>
        <div class="clear"></div>
    </div>

    {{#owner}}
        <div class="dropdown">
            <input type="hidden" id="status" value="{{post.status}}">
            <input type="hidden" id="postNo" value="{{post.id}}">
            <input role="button" class="btn btn-secondary dropdown-toggle" type="button" id="statusDropdown"
                   data-bs-toggle="dropdown" aria-expanded="false" value="{{post.status}}">
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <li><button class="dropdown-item" type="button" onclick="setStandby()">거래대기</button></li>
                <li><button class="dropdown-item" type="button" onclick="setProgress()">거래중</button></li>
                <li><button class="dropdown-item" type="button" onclick="setDone()">거래완료</button></li>
            </ul>
        </div>
    {{/owner}}
</div>

{{>layout/js}}
<link href="/css/chat.css" rel="stylesheet" />
<script src="/js/chat.js"></script>
</body>
</html>