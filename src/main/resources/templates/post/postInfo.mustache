{{>layout/header}}
<link href="/css/post.css" rel="stylesheet" type="text/css" media="all">
{{>layout/nav}}
<div id="thumbnail" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/postImage/{{post.thumbnail}}" class="d-block w-100" alt="...">
        </div>
        {{#files}}
        <div class="carousel-item">
            <img src="/postImage/{{fileName}}" class="d-block w-100" alt="...">
        </div>
        {{/files}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#thumbnail" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#thumbnail" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container">
    <div class="row">
        <h4>{{post.title}}</h4>
    </div>
    <div class="row">
        <div class="col">
            거래 방식 : {{way}}
        </div>
        <div class="col">
            {{#post.ofSize}}크기 : {{post.ofSize}}{{/post.ofSize}}{{^post.ofSize}}{{post.category}}{{/post.ofSize}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            판매자 : {{post.author}}
        </div>
        <div class="col">
            거래 점수 : {{post.users.score}}
        </div>
        <div class="col">
            {{post.status}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{post.area}}
        </div>
        <div class="col">
            조회수 : {{post.hit}}
        </div>
    </div>
</div>
{{^owner}}
    <form>
        <input type="hidden" id="userId" value="{{#userInfo}}{{userInfo.id}}{{/userInfo}}{{^userInfo}}guest{{/userInfo}}">
        <input type="hidden" id="postNo" value="{{post.id}}">
    </form>
    <button type="button" id="btn-attention" class="btn btn-outline-secondary">찜 하기</button>
    <button type="button" id="btn-chatOpen" class="btn btn-outline-primary">판매자와 대화하기</button>
{{/owner}}
<a href="/">뒤로</a>
{{#owner}}
    <a href="/posts/modify/{{post.id}}">수정</a>
    <form id="deleteForm" action="/posts/delete/{{post.id}}" method="get">
    </form>
    <button type="button" id="btn-postDelete">삭제</button>
{{/owner}}
{{>layout/js}}
<script src="/js/post.js"></script>
<script src="/js/scripts.js"></script>
</body>
</html>