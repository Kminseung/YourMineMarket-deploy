{{>layout/header}}
{{>layout/nav}}
<div id="thumbnail" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/postImage/{{post.thumbnail}}" class="d-block w-100" alt="...">
        </div>
        {{#files}}
        <div class="carousel-item">
            <img src="/postImage/{{fileName}}" class="d-block w-100" alt="...">
        </div>
        {{/files}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#thumbnail" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#thumbnail" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<h1>제목 : {{post.title}}</h1>
<h3>작성자 : {{post.author}}</h3>
<p>내용 : {{{post.content}}}</p>
<p>거래점수 : {{post.users.score}}</p>
<p>거래상태 : {{post.status}}</p>
<a href="/">뒤로</a>
{{#owner}}
    <a href="/posts/modify/{{post.id}}">수정</a>
    <form id="deleteForm" action="/posts/delete/{{post.id}}" method="get">
    </form>
    <button type="button" id="btn-postDelete">삭제</button>
{{/owner}}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
<script src="/js/post.js"></script>
<script src="/js/scripts.js"></script>
<link href="/css/post.css" rel="stylesheet" type="text/css" media="all">
</body>
</html>