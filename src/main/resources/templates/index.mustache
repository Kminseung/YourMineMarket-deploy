{{>layout/header}}
<center>
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Your Mine</h1>
                <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
            </div>
        </div>
    </header>
    {{>layout/nav}}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                <a href="/" role="button" class="btn btn-secondary">글 목록</a>
                {{>post/searchForm}}
            </div>
        </div>
    </div>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#posts}}
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img src="/postImage/{{thumbnail}}" class="card-img-top" alt="{{title}}">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{title}}</h5>
                                <!-- Product price-->
                                $40.00 - $80.00
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/posts/{{id}}">View</a></div>
                        </div>
                    </div>
                </div>
                {{/posts}}
            </div>
        </div>
    </section>
    </center>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/js/post.js"></script>
<script src="/js/scripts.js"></script>
<link href="/css/styles.css" rel="stylesheet" />
</body>
</html>