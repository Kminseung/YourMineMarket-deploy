{{>layout/header}}
<div class="col-md-12">
    <div class="col-md-4">
        <form id="userModify">
            <input type="hidden" value="{{userInfo.id}}" id="id" name="id">
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" id="name" name="name" value="{{userInfo.name}}">
            </div>
            <div class="form-group">
                <input type="text" id="postcode" name="postcode" placeholder="우편번호">
            </div>
            <button type="button" class="btn btn-primary" id="btn-postcode">우편번호 찾기</button><br>
            <div class="form-group">
                <input type="text" id="address" name="address" {{#userInfo.address}}value="{{userInfo.address}}"{{/userInfo.address}}>
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="detailAddress" name="detailAddress" {{#userInfo.detailAddress}}value="{{userInfo.detailAddress}}"{{/userInfo.detailAddress}}>
            </div>
            <div class="form-group">
                <input type="text" id="extraAddress" placeholder="참고항목">
            </div>
            <div class="form-group">
                <label for="phone">전화번호</label>
                <input type="tel" class="form-control" id="phone" name="phone" {{#userInfo.phone}}value="{{userInfo.phone}}"{{/userInfo.phone}}>
            </div>
        </form>
        <a href="/mypage" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-userModify">정보 등록</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script src="/js/account.js"></script>
</body>
</html>